<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a class="add-app-link" href="/users/<%=user._id%>/foods/new">Add New Item</a>
    <% if (foods.length === 0) { %>
        <h3>There are no items in this pantry!</h3>
      <% } else { %>
        <ul>
          <% foods.forEach((food) => { %>
            <li>
              <a href="/users/<%= user._id %>/foods/<%= food._id %>">
                <%= food.name %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
  </body>
</html>
